<body class="hold-transition skin-blue layout-top-nav">
<div class="wrapper">
  <header class="main-header">
    <nav class="navbar navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <a href="/" class="navbar-brand"><b>CarGo</b>CarIn</a>
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
            <i class="fa fa-bars"></i>
          </button>
        </div>
      </div>
    </nav>
  </header>
  <div class="content-wrapper">
    <div class="container">
     <section class="content-header">
      <div class="col-md-5 col-sm-6 col-xs-12">
          <div class="info-box">
            <div class="info-box-content">
              <span class="info-box-number">Pickup: </span> <br>
              <span class="info-box-text">Location: </span><br>
              <span class="info-box-text">Date: </span><br>
              <span class="info-box-text">Time: </span><br>
            </div>
          </div>
        </div>
          <div class="col-md-5 col-sm-6 col-xs-12">
          <div class="info-box">
            <div class="info-box-content">
              <span class="info-box-number">Dropoff: </span> <br>
              <span class="info-box-text">Location: </span><br>
              <span class="info-box-text">Date: </span><br>
              <span class="info-box-text">Time: </span><br>
          </div>
          </div>
          </div>
        </div>
        <div class="col-md-9">
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">Contact Details</h3>
            </div>
            
            <form method="POST" action="/contact">
              <div class="box-body">                
                <div class="form-group">
                  <label for="inputfirstname3" class="col-sm-2 control-label">First Name</label>
                  <div class="col-sm-4">
                    <input type="firstname" class="form-control" id="firstname" name="firstname" placeholder="First Name">
                  </div>
                  <label for="inputlastname3" class="col-sm-2 control-label">Last Name</label>
                  <div class="col-sm-4">
                    <input type="lastname" class="form-control" id="lastname" name="lastname" placeholder="Last Name">
                  </div>
                </div> 
                 <div class="form-group">
                  <label for="inputemail3" class="col-sm-2 control-label">Email</label>
                  <div class="col-sm-10">
                    <input type="email" class="form-control" id="info_email" name="info_email" placeholder="Email">
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputnumber3" class="col-sm-2 control-label">Mobile Number</label>
                  <div class="col-sm-10">
                    <input type="email" class="form-control" id="mobileNo" name="mobileNo" placeholder="Mobile Number">
                  </div>
                </div>
                  <div class="col-md-9">
              <div class="box-footer">
                <button type="submit" class="btn btn-info">Book now</button>
              </div>
                  </div>
              </div>
            </form>
          </div>     
      </section>
    </div>
  </div>
  <footer class="main-footer">
    <div class="container">
      <div class="pull-right hidden-xs">
        Raoul and friends.
